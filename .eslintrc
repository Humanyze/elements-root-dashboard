// NOTE: to run eslint fix,
// bash: npx eslint --fix .
{
  "extends": [
    "react-app"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "jsx-quotes": [
      "warn",
      "prefer-single"
    ],
    "space-infix-ops": [
      "warn",
      {}
    ],
    "no-param-reassign": [
      "off",
      {
        "props": true
      }
    ],
    "prefer-const": "warn"
    //,
    // todo fix: complains on class instead of untranslated text
    // note: can create custom for this
    // "react/jsx-no-literals": [2, {"noStrings": true}]
  }
}
